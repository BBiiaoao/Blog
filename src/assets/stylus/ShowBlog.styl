*
  margin 0
  padding 0
  #show-blogs
    width 90%
    padding-top 10px
    margin 0 auto
    .blog-title
      margin 10px 0
      height 50px
      color #c0c0c0
      font-size 50px
      line-height 50px
      font-family "serif"
    .blog-title-transition-enter-active
      transition all 0.5s ease-in-out
    .blog-title-transition-leave-active
      transition all 0.5s ease-in-out 0.5s
    .blog-search-transition-enter-active
      transition all 0.5s ease-in-out 0.5s
    .blog-search-transition-leave-active
      transition all 0.5s ease-in-out
    .blog-title-transition-enter
    .blog-search-transition-enter
    .blog-title-transition-leave-to
    .blog-search-transition-leave-to
      opacity 0
      transform translateX(-100px)
    .blog-article-transition-enter
    .blog-article-transition-leave-to
      top -100px
    .blog-article-transition-leave-active
    .blog-article-transition-enter-active
      transition all 0.5s ease-in-out 1s
    .blog-search
      height 40px
      display flex
      flex-direction row
      align-items center
      .icon-container
        width 1.5em
        .icon-blue
          display none
      .input-bar-container
        margin-left 10px
        width 50%
        .input-bar
          width 10%
          min-width 50px
          border 0
          border-bottom: 2px solid #ffffff
          font-size 18px
          cursor pointer
          transition all 1s ease
          &:hover
            width 100%
            border-bottom: 2px solid #9DD3FA
          &:focus
            width 100%
            border-bottom: 2px solid #9DD3FA
    .article-container
      display flex
      flex-flow row wrap
      width 100%
      perspective 1000
      .single-blog-container
        width 30%
        margin: 20px 20px 20px 0
        .single-blog
          position relative
          width 100%
          height 350px
          perspective 500px
          &:hover .back
            transform rotateY(0deg)
          &:hover .front
            transform rotateY(180deg)
          a
            text-decoration none
            color #444
          .front
          .back
            box-sizing: border-box
            position absolute
            width 100%
            height 350px
            border-radius 5px
            background: #eeeeee
            transition 1s
            transform-style preserve-3d
            backface-visibility hidden
          .front
            z-index 2
            word-wrap break-word
            .single-blog-title
              margin 5px 5px
            .single-blog-content
              margin 0 5px
              text-indent 1em
          .back
            word-wrap break-word
            transform rotateY(180deg)
            a
              width 100%
              cursor pointer
              .single-blog-title
                margin 5px 5px
              .single-blog-author
              .single-blog-categories
              .single-blog-time
                margin 0 5px
              .single-blog-categories
                display flex
                height auto
                .categories-left
                  height 20px
                .categories-right
                  margin 2px 10px
                  .category
                    margin-bottom 2px
    .show-allBlogs
      position relative
      height 70px
      text-align center
      .font-container
        position absolute
        left 50%
        margin-left -1em
        padding-top 0.3em
        width 2.0em
        height 1.7em
        border-radius 50%
        animation upDownJump 1s infinite alternate
        &:hover
          animation-play-state paused
      @keyframes upDownJump
        from
          top 0
        to
          top 5px
      .label
        width 100px
        padding-top 40px
        margin 0 auto
      &:hover
        color #9DD3FA
